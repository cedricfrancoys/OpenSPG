{% extends '::base.html.twig' %}

{% block title %}Groups{% endblock %}
{% block pageTitleText %}Groups{% endblock %}

{% block body %}

	{{ parent() }}

	<div class="container">
		<div class="row">
			<div class="col-md-6">
				<h4>{{ "Managers"|trans({},'group') }}</h4>
				<table class="table">
					<tbody>
						{% for group in managers %}
							{% if group|length %}
								<tr>
									<td colspan="2" class="group-group">{{ group[0].Node.name }}</td>
								</tr>
								{% for manager in group %}
									<tr>
										<td>&nbsp;</td>
										<td>{{ manager.name }} {{ manager.surname }}</td>
									</tr>
								{% endfor %}
							{% else %}
								<tr>
									<td colspan="2" class="group-group">{{ nodes[loop.index0].name }}</td>
								</tr>
								<tr>
									<td>&nbsp;</td>
									<td>{{ "There are no managers defined for this group"|trans({},'group') }}</td>
								</tr>
							{% endif %}
						{% endfor %}
					</tbody>
				</table>
			</div>
			<div class="col-md-6">
				<h4>{{ "Visit Groups"|trans({},'group') }}</h4>
				<table class="table">
					<tbody>
						{% for group in visitors %}
							{% if group|length %}
								<tr>
									<td colspan="2" class="group-group">{{ group[0].Node.name }}</td>
								</tr>
								{% for visitor in group %}
									<tr>
										<td>&nbsp;</td>
										<td>{{ visitor.name }} {{ visitor.surname }}</td>
									</tr>
								{% endfor %}
							{% else %}
								<tr>
									<td colspan="2" class="group-group">{{ nodes[loop.index0].name }}</td>
								</tr>
								<tr>
									<td>&nbsp;</td>
									<td>{{ "There are no visitors defined for this group"|trans({},'group') }}</td>
								</tr>
							{% endif %}
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>

{% endblock %}

{% block stylesheets %}
	{{ parent() }}
{% endblock %}	
{% block javascripts %}
	{{ parent() }}
{% endblock %}