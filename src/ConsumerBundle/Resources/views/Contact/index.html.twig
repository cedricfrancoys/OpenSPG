{% extends '::base.html.twig' %}

{% block title %}{{"Contacts"|trans({},"contact")}}{% endblock %}

{% block pageTitleText %}{{"Contacts"|trans({},"contact")}}{% endblock %}

{% block body %}

	{{ parent() }}

    <div class="container">
		<div class="row">
			{{ include('ConsumerBundle:Partials:sidebar.html.twig') }}
			<div class="col-sm-9 col-sm-offset-2 col-md-10 col-md-offset-0 main">
				<table class="table table-striped">
					<thead>
						<tr>
							<th>{{"Receiver"|trans({},"contact")}}</th>
							<th>{{"MessageSent"|trans({},"contact")}}</th>
							<th>&nbsp;</th>
						</tr>
					</thead>
					<tbody>
						{% for contact in contacts %}
							<tr>
								<td>{{contact.Receiver}}</td>
								<td>{{contact.sent|date('d/m/Y H:i')}}</td>
								<td>
									<a href="{{ path('consumer_contact_show', {"id":contact.id}) }}" class="btn btn-success">{{"show"|trans({},"table")}}</a>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>

{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	{% stylesheets 'bundles/producer/css/styles.css' filter='cssrewrite' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}	
{% block javascripts %}
	{{ parent() }}
{% endblock %}