{% extends '::base.html.twig' %}

{% block title %}Contactar consumidor{% endblock %}
{% block pageTitleText %}Contactar consumidor{% endblock %}

{% block body %}

	{{ parent() }}

	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				{% for type, messages in app.session.flashbag.all() %}
					{% for message in messages %}
						<div class="alert alert-{{ type }}">{{ message }}</div>
					{% endfor %}
				{% endfor %}
			    {{ form_start(form) }}
					{{ form_errors(form) }}
					{{ form_row( form.name ) }}
					{{ form_row( form.email ) }}
					{{ form_row( form.message ) }}
				{{ form_end(form) }}
			</div>
		</div>
	</div>

{% endblock %}

{% block stylesheets %}
	{{ parent() }}
{% endblock %}	
{% block javascripts %}
	{{ parent() }}
{% endblock %}