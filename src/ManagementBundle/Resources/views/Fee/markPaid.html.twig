{% extends '::base.html.twig' %}

{% block title %}{{"Mark as paid?"|trans({},"management")}}{% endblock %}

{% block pageTitleText %}{{"Mark as paid?"|trans({},"management")}}{% endblock %}

{% block body %}

	{{ parent() }}

    <div class="container">
		<div class="row">
			{{ include('ManagementBundle:Partials:sidebar.html.twig') }}
			<div class="col-sm-9 col-sm-offset-2 col-md-10 col-md-offset-0 main">
			    {% for type, messages in app.session.flashbag.all() %}
					{% for message in messages %}
						<div class="alert alert-{{ type }}">{{ message }}</div>
					{% endfor %}
				{% endfor %}
			    <form method="post">
			    	{% trans %}
			    		<h2>Are you sure you want to mark the selected fee as paid?</h2>
			    		<p></p>
			    	{% endtrans %}
			    	<input type="submit" value="{{ "Mark as paid"|trans({},"management") }}" />
			    	<input type="hidden" name="confirmation_key" value="{{ confirmation_key }}" />
			    </form>
			</div>
		</div>
	</div>

{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	{% stylesheets 'bundles/management/css/edit.css' filter='cssrewrite' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}	
{% block javascripts %}
	{{ parent() }}
	<script src="{{ url('bazinga_jstranslation_js', { 'domain': 'management' }) }}"></script>
	{% javascripts
        'bundles/management/js/edit.js'
        'bundles/app/js/forms.js'%}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}