{% extends '::base.html.twig' %}

{% block title %}{{"Managers"|trans({},"management")}}{% endblock %}

{% block pageTitleText %}{{"Managers"|trans({},"management")}}{% endblock %}

{% block body %}

	{{ parent() }}

    <div class="container">
		<div class="row">
			{{ include('ManagementBundle:Partials:sidebar.html.twig') }}
			<div class="col-sm-9 col-sm-offset-2 col-md-10 col-md-offset-0 main">
				{% for type, messages in app.session.flashbag.all() %}
					{% for message in messages %}
						<div class="alert alert-{{ type }}">{{ message }}</div>
					{% endfor %}
				{% endfor %}
				<table class="table table-striped">
					<thead>
						<tr>
							<th>{{"Name"|trans({},"management")}}</th>
							<th>{{"Surname"|trans({},"management")}}</th>
							<th>{{"Phone"|trans({},"management")}}</th>
							<th><a href="{{ path('management_manager_add') }}" class="btn btn-success">{{"Add"|trans({},"table")}}</a></th>
						</tr>
					</thead>
					<tbody>
						{% for manager in managers %}
							<tr>
								<td>{{manager.name}}</td>
								<td>{{manager.surname}}</td>
								<td>{{manager.phone}}</td>
								<td>
									<a href="{{ path('management_manager_edit', {"id":manager.id}) }}" class="btn btn-success">{{"edit"|trans({},"table")}}</a>
									<a href="{{ path('management_manager_remove', {"id":manager.id}) }}" class="btn btn-danger">{{"remove"|trans({},"table")}}</a>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>

{% endblock %}

{% block stylesheets %}
	{{ parent() }}
{% endblock %}	
{% block javascripts %}
	{{ parent() }}
{% endblock %}