{% extends '::base.html.twig' %}

{% block title %}{{"Delete producer?"|trans({},"management")}}{% endblock %}

{% block pageTitleText %}{{"Delete producer?"|trans({},"management")}}{% endblock %}

{% block body %}

	{{ parent() }}

    <div class="container">
	    <form method="post">
	    	{% trans %}
	    		<h2>Are you sure you want to delete the selected producer?</h2>
	    		<p>Doing so is undoable and will also delete related properties. Other related items will be converted to orphans in order to keep organizational data.</p>
	    	{% endtrans %}
	    	<input type="submit" value="{{ "Delete forever" }}" />
	    	<input type="hidden" name="confirmation_key" value="{{ confirmation_key }}" />
	    </form>
	</div>

{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	{% stylesheets 'bundles/management/css/edit.css' filter='cssrewrite' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}	
{% block javascripts %}
	{{ parent() }}
	<script src="{{ url('bazinga_jstranslation_js', { 'domain': 'management' }) }}"></script>
	<script src="{{ asset('bundles/management/js/edit.js') }}" type="text/javascript"></script>
{% endblock %}