{% extends '::base.html.twig' %}

{% block title %}{{"Add property"|trans({},"management")}}{% endblock %}

{% block pageTitleText %}{{"Add property"|trans({},"management")}}{% endblock %}

{% block body %}

	{{ parent() }}

    <div class="container">
	    {{ form_start(form) }}
			{{ form_errors(form) }}
			{{ form_row(form.Member) }}
			<fieldset>
				<legend>{{"Property data"|trans({},"property")}}</legend>
				{{ form_row(form.areaName) }}	
				{{ form_row(form.address) }}	
				{{ form_row(form.regNr) }}	
				{{ form_row(form.name) }}	
				{{ form_row(form.tenure) }}	
				{{ form_row(form.size) }}	
			</fieldset>
			<fieldset>
				<legend>{{"General information"|trans({},"property")}}</legend>
				{{ form_row(form.previousUses) }}	
				{{ form_row(form.waterTypeOrigin) }}	
				{{ form_row(form.crops) }}	
				{{ form_row(form.certified) }}	
				{{ form_row(form.certifiedYear) }}	
				{{ form_row(form.certifiedProvider) }}	
				{{ form_row(form.lastAgroquimicUsage) }}	
				{{ form_row(form.fertilizer) }}	
				{{ form_row(form.phytosanitary) }}	
				{{ form_row(form.ownerLivesHere) }}	
				{{ form_row(form.ownerDistance) }}	
				{{ form_row(form.workforce) }}	
			</fieldset>
			<fieldset>
				<legend>{{"Products"|trans({},"property")}}</legend>
				{{ form_row(form.productSellingDistance) }}	
				{{ form_row(form.productSellingTime) }}	
				{{ form_row(form.productConservation) }}	
				{{ form_row(form.productConservationDetails) }}	
			</fieldset>
			<fieldset>
				<legend>{{"Environment data"|trans({},"property")}}</legend>
				{{ form_row(form.surroundings) }}	
				{{ form_row(form.surroundingProblems) }}
			</fieldset>
		{{ form_end(form) }}
	</div>

{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	{% stylesheets 'bundles/management/css/edit.css'
					'bundles/producer/css/property.css' filter='cssrewrite' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}	
{% block javascripts %}
	{{ parent() }}
	<script src="{{ url('bazinga_jstranslation_js', { 'domain': 'property' }) }}"></script>
	<script src="{{ asset('bundles/producer/js/property.js') }}" type="text/javascript"></script>
{% endblock %}