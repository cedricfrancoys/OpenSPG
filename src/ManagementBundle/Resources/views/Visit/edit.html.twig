{% extends '::base.html.twig' %}

{% block title %}{{"Edit visit"|trans({},"management")}}{% endblock %}

{% block pageTitleText %}{{"Edit visit"|trans({},"management")}}{% endblock %}

{% block body %}

	{{ parent() }}

    <div class="container">
	    <div class="action-buttons">
			<a href="{{ path('management_visit_add') }}" class="btn btn-success btn-add">{{"New visit"|trans({},"management")}}</a>
		</div>
	    {{ form_start(form) }}
			{{ form_errors(form) }}
			{{ include('ProducerBundle:Visit:base_form.html.twig') }}
		{{ form_end(form) }}
	</div>

{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	{% stylesheets 'bundles/management/css/edit.css'
					'bundles/app/css/form.css' 
				filter='cssrewrite' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}	
{% block javascripts %}
	{{ parent() }}
	<script src="{{ url('bazinga_jstranslation_js', { 'domain': 'visit' }) }}"></script>
	{% javascripts
        'bundles/producer/js/visit.js'%}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}