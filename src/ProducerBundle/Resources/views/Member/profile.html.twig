{% extends '::base.html.twig' %}

{% block title %}Producers{% endblock %}

{% block pageTitleText %}Profile{% endblock %}

{% block body %}

	{{ parent() }}

    <div class="container">
	    {{ form_start(form) }}
			{{ form_errors(form) }}
			{{ form_row(form.name) }}
			{{ form_row(form.surname) }}
			{{ form_row(form.phone) }}
    		<ul class="properties" data-prototype="{{ form_widget(form.Properties.vars.prototype)|e }}">
        		{% for property in form.Properties %}
            		<li>{{ form_row(property.name) }}</li>
        		{% endfor %}
    		</ul>
		{{ form_end(form) }}
	</div>

    <!-- FOOTER -->
    <footer>
		<div class="container">
        <p class="pull-right"><a href="#">Back to top</a></p>
        <p><a href="#">{% trans %}Privacy{% endtrans %}</a> &middot; <a href="#">{% trans %}Terms{% endtrans %}</a></p>
		</div>
    </footer>

{% endblock %}

{% block stylesheets %}
	{{ parent() }}
{% endblock %}	
{% block javascripts %}
	{{ parent() }}
{% endblock %}