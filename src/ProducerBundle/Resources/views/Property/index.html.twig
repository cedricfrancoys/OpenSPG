{% extends '::base.html.twig' %}

{% block title %}{{"Properties"|trans({},"property")}}{% endblock %}

{% block pageTitleText %}{{"Properties"|trans({},"property")}}{% endblock %}

{% block body %}

	{{ parent() }}

    <div class="container">
		<div class="row">
			{{ include('ProducerBundle:Partials:sidebar.html.twig') }}
			<div class="col-sm-9 col-sm-offset-2 col-md-10 col-md-offset-0 main">
				<table class="table table-striped">
					<thead>
						<tr>
							<th>{{"Name"|trans({},"property")}}</th>
							<th>{{"Area"|trans({},"property")}}</th>
							<th>{{"Address"|trans({},"property")}}</th>
							<th><a href="{{ path('producer_property_add') }}" class="btn btn-success">{{"Add"|trans({},"table")}}</a></th>
						</tr>
					</thead>
					<tbody>
						{% for property in properties %}
							<tr>
								<td>{{property.name}}</td>
								<td>{{property.areaName}}</td>
								<td>{{property.address}}</td>
								<td><a href="{{ path('producer_property_edit', {"id":property.id}) }}" class="btn btn-success">{{"edit"|trans({},"table")}}</a></td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>

{% endblock %}

{% block stylesheets %}
	{{ parent() }}
{% endblock %}	
{% block javascripts %}
	{{ parent() }}
{% endblock %}