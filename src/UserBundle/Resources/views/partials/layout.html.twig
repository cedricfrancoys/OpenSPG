{% extends '::base.html.twig' %}

{% block title %}{% trans %}Login{% endtrans %}{% endblock %}

{% block body %}
	
	{{ parent() }}

	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				{% for type, messages in app.session.flashBag.all %}
			        {% for message in messages %}
			            <div class="{{ type }}">
			                {{ message|trans({}, 'FOSUserBundle') }}
			            </div>
			        {% endfor %}
			    {% endfor %}
			</div>
		</div>
	</div>
        
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				{% block user_content %}{% endblock %}
			</div>
		</div>
	</div>
{% endblock %}